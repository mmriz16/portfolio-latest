// File: prisma/schema.prisma

// Langkah 1: Memberi tahu Prisma jenis database yang kita pakai
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Langkah 2: Memberi tahu Prisma cara membuat "kurir" untuk kode kita
generator client {
  provider = "prisma-client-js"
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  category    String
  link        String?  // Tanda tanya (?) berarti field ini tidak wajib diisi
  createdAt   DateTime @default(now())
}

model Personal {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  link        String?  // Tanda tanya (?) berarti field ini tidak wajib diisi
  createdAt   DateTime @default(now())
}

model Uses {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
}